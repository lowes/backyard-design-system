{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "module": "commonjs",
        "outDir": "build",
        "declaration": true,
        "emitDeclarationOnly": true,
        "target": "es5",
        "lib": [
            "dom",
            "es2016"
        ],
        "skipLibCheck": true,
        "jsx": "react",
        "moduleResolution": "node",
        // "noImplicitAny": true,
        // "strict": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "suppressImplicitAnyIndexErrors": true,
        "resolveJsonModule": true,
        "preserveSymlinks": true,
        // Down level iterators like `Set` to allow spread operator at compile time
        "downlevelIteration": true,
        "composite": true,
        "types": [
            "node",
            "jest",
            "react",
            "@testing-library/jest-dom"
        ]
    },
    "include": [
        "**/*.ts*",
        "**/*.js*",
        "modules.d.ts"
    ],
    "exclude": [
        "**/dist/",
        "**/build/",
        "**/node_modules/"
    ],
    "references": [
        {
            "path": "./packages/bds-tokens"
        },
        {
            "path": "./packages/bds-icons"
        },
        {
            "path": "./packages/bds-react"
        }
    ]
}